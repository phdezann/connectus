#!/bin/bash

APK_FILENAME=$(jq -r '"connectus-\(.config.versionName).apk"' app/release-description.txt)

curl -X POST https://content.dropboxapi.com/2/files/upload                                                            \
    --header "Authorization: Bearer $DROPBOX_ACCESS_TOKEN"                                                            \
    --header "Dropbox-API-Arg: {\"path\": \"/$APK_FILENAME\",\"mode\": \"add\",\"autorename\": true,\"mute\": false}" \
    --header "Content-Type: application/octet-stream"                                                                 \
    --data-binary @app/build/outputs/apk/app-release.apk
